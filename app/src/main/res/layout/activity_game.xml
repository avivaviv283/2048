    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="drag"
        android:id="@+id/up1"
        android:text="up"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/down"
        android:onClick="drag"
        android:text="down"/>

</LinearLayout>